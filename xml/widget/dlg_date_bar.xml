<tkwidget>

    <!-- item name -->

    <ttklabelframe
        text="Item name"
        layout="pack"
        resizable="yes"
    >
        <ttklabel
            textvariable="item_name"
            style="info_big.TLabel"
            layout="pack"
            resizable="width"
        />
    </ttklabelframe>

    <!-- item status -->

    <ttklabelframe
        text="Status"
        layout="pack"
        resizable="yes"
    >
        <ttkradiobutton
            text="Available (OK)"
            variable="opt_status"
            value="OK"
            selected="selected"
            layout="grid"
            layout_options="row=0, column=0"
        />
        <ttkradiobutton
            text="Unavailable (N/A)"
            variable="opt_status"
            value="N/A"
            layout="grid"
            layout_options="row=0, column=1, padx=10"
        />
    </ttklabelframe>

    <!-- dates calendar -->

    <ttklabelframe
        text="Dates"
        layout="pack"
        resizable="yes"
    >
        <!-- date begin -->
        <ttklabel
            text="Date begin:"
            layout="grid"
            layout_options="row=0, column=0, sticky='w'"
        />
        <ttkcombobox
            name="combo_begin_day"
            width="2"
            layout="grid"
            layout_options="row=0, column=1, padx=5, pady=2"
        />
        <ttkcombobox
            name="combo_begin_month"
            width="5"
            layout="grid"
            layout_options="row=0, column=2"
        />
        <ttkcombobox
            name="combo_begin_year"
            width="4"
            layout="grid"
            layout_options="row=0, column=3, padx=5"
        />
        <!-- date end -->
        <ttklabel
            text="Date end:"
            layout="grid"
            layout_options="row=1, column=0, sticky='w'"
        />
        <ttkcombobox
            name="combo_end_day"
            width="2"
            layout="grid"
            layout_options="row=1, column=1, padx=5, pady=2"
        />
        <ttkcombobox
            name="combo_end_month"
            width="5"
            layout="grid"
            layout_options="row=1, column=2"
        />
        <ttkcombobox
            name="combo_end_year"
            width="4"
            layout="grid"
            layout_options="row=1, column=3, padx=5"
        />
    </ttklabelframe>
</tkwidget>
