<tkwidget>

    <!-- module imports -->

    <module
        id="mtab_title_data"
        from="src"
        import="project_tab_title_data"
        as="PTTD"
    />
    <module
        id="mtab_draft_notes"
        from="src"
        import="project_tab_draft_notes"
        as="PTDN"
    />
    <module
        id="mtab_pitch_concept"
        from="src"
        import="project_tab_pitch_concept"
        as="PTPC"
    />
    <module
        id="mtab_characters"
        from="src"
        import="project_tab_characters"
        as="PTCH"
    />
    <module
        id="mtab_scenario"
        from="src"
        import="project_tab_scenario"
        as="PTSC"
    />
    <module
        id="mtab_storyboard"
        from="src"
        import="project_tab_storyboard"
        as="PTSB"
    />
    <module
        id="mtab_resources"
        from="src"
        import="project_tab_resources"
        as="PTRE"
    />

    <!-- apply following styles app-wide -->

    <ttkstyle>
    <![CDATA[
        TCheckbutton :selected { indicatorcolor: royal blue; }
        TCombobox :readonly { fieldbackground: white; }
        RO.TCombobox :readonly {
            fieldbackground: grey90;
            foreground: royal blue;
        }
        raised.TFrame { borderwidth: 1; relief: raised; }
        error.TLabel { foreground: red; }
        info.TLabel { foreground: royal blue; }
        info_big.TLabel { font: sans 12 bold; foreground: royal blue; }
        info_mini.TLabel { font: sans 9 bold; foreground: royal blue; }
        TLabelframe { padding: 5; }
        TRadiobutton :selected { indicatorcolor: royal blue; }
    ]]>
    </ttkstyle>

    <!-- main widget -->

    <ttknotebook
        padding="5"
        layout="pack"
        resizable="yes"
    >
        <!-- Tab 1 -->
        <ttktab text="Title/Data">
            <!-- MS-Windows workaround -->
            <ttkframe
                padding="5"
                layout="pack"
                resizable="yes"
            >
                <widget
                    class="ProjectTabTitleData"
                    name="tab_title_data"
                    module="mtab_title_data"
                    layout="pack"
                    resizable="yes"
                />
            </ttkframe>
        </ttktab>

        <!-- Tab 2 -->
        <ttktab text="Draft/Notes">
            <!-- MS-Windows workaround -->
            <ttkframe
                padding="5"
                layout="pack"
                resizable="yes"
            >
                <widget
                    class="ProjectTabDraftNotes"
                    name="tab_draft_notes"
                    module="mtab_draft_notes"
                    layout="pack"
                    resizable="yes"
                />
            </ttkframe>
        </ttktab>

        <!-- Tab 3 -->
        <ttktab text="Pitch/Concept">
            <!-- MS-Windows workaround -->
            <ttkframe
                padding="5"
                layout="pack"
                resizable="yes"
            >
                <widget
                    class="ProjectTabPitchConcept"
                    name="tab_pitch_concept"
                    module="mtab_pitch_concept"
                    layout="pack"
                    resizable="yes"
                />
            </ttkframe>
        </ttktab>

        <!-- Tab 4 -->
        <ttktab text="Characters">
            <!-- MS-Windows workaround -->
            <ttkframe
                padding="5"
                layout="pack"
                resizable="yes"
            >
                <widget
                    class="ProjectTabCharacters"
                    name="tab_characters"
                    module="mtab_characters"
                    layout="pack"
                    resizable="yes"
                />
            </ttkframe>
        </ttktab>

        <!-- Tab 5 -->
        <ttktab text="Scenario">
            <!-- MS-Windows workaround -->
            <ttkframe
                padding="5"
                layout="pack"
                resizable="yes"
            >
                <widget
                    class="ProjectTabScenario"
                    name="tab_scenario"
                    module="mtab_scenario"
                    layout="pack"
                    resizable="yes"
                />
            </ttkframe>
        </ttktab>

        <!-- Tab 6 -->
        <ttktab text="Storyboard">
            <!-- MS-Windows workaround -->
            <ttkframe
                padding="5"
                layout="pack"
                resizable="yes"
            >
                <widget
                    class="ProjectTabStoryboard"
                    name="tab_storyboard"
                    module="mtab_storyboard"
                    layout="pack"
                    resizable="yes"
                />
            </ttkframe>
        </ttktab>

        <!-- Tab 7 -->
        <ttktab text="Resources">
            <!-- MS-Windows workaround -->
            <ttkframe
                padding="5"
                layout="pack"
                resizable="yes"
            >
                <widget
                    class="ProjectTabResources"
                    name="tab_resources"
                    module="mtab_resources"
                    layout="pack"
                    resizable="yes"
                />
            </ttkframe>
        </ttktab>

    </ttknotebook>
</tkwidget>
