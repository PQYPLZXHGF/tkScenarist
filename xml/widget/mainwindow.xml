<tkwidget>
    <ttknotebook
        padding="5px 10px 5px 5px"
        layout="pack"
        resizable="yes"
    >
        <!-- Tab 1 -->
        <ttktab text="Title/Data" padding="5px">
            <include xml_filename="tab_title_data"/>
        </ttktab>

        <!-- Tab 2 -->
        <ttktab text="Draft/Notes" padding="5px">
            <include xml_filename="tab_draft_notes"/>
        </ttktab>

        <!-- Tab 3 -->
        <ttktab text="Pitch/Concept" padding="5px">
            <include xml_filename="tab_pitch_concept"/>
        </ttktab>

        <!-- Tab 4 -->
        <ttktab text="Characters" padding="5px">
            <include xml_filename="tab_characters"/>
        </ttktab>

        <!-- Tab 5 -->
        <ttktab text="Scenario" padding="5px">
            <include xml_filename="tab_scenario"/>
        </ttktab>

        <!-- Tab 6 -->
        <ttktab text="Storyboard" padding="5px">
            <include xml_filename="tab_storyboard"/>
        </ttktab>

        <!-- Tab 7 -->
        <ttktab text="Resources" padding="5px">
            <include xml_filename="tab_resources"/>
        </ttktab>

    </ttknotebook>
</tkwidget>
