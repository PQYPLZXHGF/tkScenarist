<tkwidget>
    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >
        <!-- navigation frame -->
        <ttklabelframe
            text="Navigation"
            padding="2px"
            weight="1"
        >
            <ttklabel
                text="Scene browser:"
                layout="pack"
                resizable="width"
            />
            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <listbox
                    id="scene_browser"
                    name="listbox_scene_browser"
                    width="30"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="yes"
                />
                <ttkscrollbar
                    connect="scene_browser"
                    orient="vertical"
                    layout="grid"
                    layout_options="row=0, column=1"
                    resizable="height"
                />
                <ttkscrollbar
                    connect="scene_browser"
                    orient="horizontal"
                    layout="grid"
                    layout_options="row=1, column=0"
                    resizable="width"
                />
            </ttkframe>
        </ttklabelframe>

        <!-- scenario frame -->

        <ttklabelframe
            text="Scenario"
            padding="2px"
            weight="6"
        >
            <!-- toolbar info - current element -->
            <ttkframe
                layout="pack"
                resizable="width"
            >
                <ttklabel
                    text="Current element:"
                    layout="pack"
                    layout_options="side='left'"
                />
                <ttkcombobox
                    name="combo_elements"
                    textvariable="combo_current_element"
                    font="sans 9 bold"
                    foreground="royal blue"
                    layout="pack"
                    layout_options="side='left', padx=5"
                />
            </ttkframe>
            <!-- toolbar info - Tab/Return hotkeys -->
            <ttkframe
                layout="pack"
                resizable="width"
            >
                <ttklabel
                    text="&lt;Tab&gt;:"
                    layout="pack"
                    layout_options="side='left', pady=3"
                />
                <ttklabel
                    textvariable="lbl_on_tab"
                    layout="pack"
                    layout_options="side='left', padx=5"
                    resizable="yes"
                />
                <ttklabel
                    text="&lt;Return&gt;:"
                    layout="pack"
                    layout_options="side='left'"
                />
                <ttklabel
                    textvariable="lbl_on_return"
                    layout="pack"
                    layout_options="side='left', padx=5"
                    resizable="yes"
                />
                <ttklabel
                    text="&lt;Ctrl-Return&gt;:"
                    layout="pack"
                    layout_options="side='left'"
                />
                <ttklabel
                    textvariable="lbl_on_ctrl_return"
                    layout="pack"
                    layout_options="side='left', padx=5"
                    resizable="yes"
                />
            </ttkframe>
            <!-- scenario text frame -->
            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <module
                    id="mscenario_text"
                    from="src"
                    import="scenario_text"
                    as="SCT"
                />
                <widget
                    id="scenario"
                    name="text_scenario"
                    class="ScenarioText"
                    module="mscenario_text"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="yes"
                />
                <tkevent
                    widget="scenario"
                    seq="Key"
                    slot="@Text:Key:Pressed"
                />
                <ttkscrollbar
                    connect="scenario"
                    orient="vertical"
                    layout="grid"
                    layout_options="row=0, column=1"
                    resizable="height"
                />
                <ttkscrollbar
                    connect="scenario"
                    orient="horizontal"
                    layout="grid"
                    layout_options="row=1, column=0"
                    resizable="width"
                />
            </ttkframe>
        </ttklabelframe>

        <!-- information frame -->

        <ttklabelframe
            text="Information"
            padding="2px"
            weight="1"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >
                <!-- hints -->
                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Hints:"
                        layout="pack"
                        resizable="width"
                    />
                    <ttklabel
                        textvariable="lbl_info_hint"
                        wraplength="200"
                        layout="pack"
                        resizable="width"
                    />
                </ttkframe>
                <!-- character log -->
                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="About:"
                        layout="pack"
                        resizable="width"
                    />
                    <!-- character's name -->
                    <ttklabel
                        textvariable="lbl_character_name"
                        anchor="center"
                        font="sans 12 bold"
                        foreground="royal blue"
                        layout="pack"
                        layout_options="pady=2"
                        resizable="width"
                    />
                    <!-- character's log text widget -->
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <text
                            id="info_char_log"
                            name="text_characters_log"
                            height="10"
                            width="20"
                            state="disabled"
                            wrap="word"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="info_char_log"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=1, column=1"
                            resizable="height"
                        />
                    </ttkframe>
                </ttkframe>
                <!-- stats -->
                <ttkframe
                    weight="10"
                >
                    <ttklabel
                        text="Stats:"
                        layout="pack"
                        resizable="width"
                    />
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <ttklabel
                            text="Est. page:"
                            layout="grid"
                            layout_options="row=0, column=0, sticky='w'"
                        />
                        <ttklabel
                            textvariable="lbl_page_count"
                            width="10"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="width"
                        />
                        <ttklabel
                            text="Est. movie duration:"
                            layout="grid"
                            layout_options="row=1, column=0, sticky='w'"
                        />
                        <ttklabel
                            textvariable="lbl_movie_duration"
                            width="10"
                            layout="grid"
                            layout_options="row=1, column=1"
                            resizable="width"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>
    </ttkpanedwindow>
</tkwidget>
