<tkwidget>
    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >
        <!-- navigation frame -->
        <ttklabelframe
            text="Navigation"
            padding="2px"
            weight="1"
        >
            <ttklabel
                text="dummy text"
                width="20"
                layout="pack"
                resizable="yes"
            />
        </ttklabelframe>

        <!-- scenario frame -->

        <ttklabelframe
            text="Scenario"
            padding="2px"
            weight="6"
        >
            <!-- toolbar info - current element -->
            <ttkframe
                layout="pack"
                resizable="width"
            >
                <ttklabel
                    text="Current element:"
                    layout="pack"
                    layout_options="side='left'"
                />
                <ttkcombobox
                    name="combo_elements"
                    textvariable="combo_current_element"
                    font="sans 9 bold"
                    foreground="royal blue"
                    layout="pack"
                    layout_options="side='left', padx=5"
                />
            </ttkframe>
            <!-- toolbar info - Tab/Return hotkeys -->
            <ttkframe
                layout="pack"
                resizable="width"
            >
                <ttklabel
                    text="&lt;Tab&gt;:"
                    layout="pack"
                    layout_options="side='left'"
                />
                <ttklabel
                    textvariable="lbl_on_tab"
                    layout="pack"
                    layout_options="side='left', padx=5"
                    resizable="yes"
                />
                <ttklabel
                    text="&lt;Return&gt;:"
                    layout="pack"
                    layout_options="side='left'"
                />
                <ttklabel
                    textvariable="lbl_on_return"
                    layout="pack"
                    layout_options="side='left', padx=5"
                    resizable="yes"
                />
                <ttklabel
                    text="&lt;Ctrl-Return&gt;:"
                    layout="pack"
                    layout_options="side='left'"
                />
                <ttklabel
                    textvariable="lbl_on_ctrl_return"
                    layout="pack"
                    layout_options="side='left', padx=5"
                    resizable="yes"
                />
            </ttkframe>
            <!-- scenario text frame -->
            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <module
                    id="mscenario_text"
                    from="src"
                    import="scenario_text"
                    as="SCT"
                />
                <widget
                    id="scenario"
                    name="text_scenario"
                    class="ScenarioText"
                    module="mscenario_text"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="yes"
                />
                <tkevent
                    widget="scenario"
                    seq="Key"
                    slot="@Text:Key:Pressed"
                />
                <ttkscrollbar
                    connect="scenario"
                    orient="vertical"
                    layout="grid"
                    layout_options="row=0, column=1"
                    resizable="height"
                />
                <ttkscrollbar
                    connect="scenario"
                    orient="horizontal"
                    layout="grid"
                    layout_options="row=1, column=0"
                    resizable="width"
                />
            </ttkframe>
        </ttklabelframe>

        <!-- information frame -->

        <ttklabelframe
            text="Information"
            padding="2px"
            weight="1"
        >
            <ttklabel
                text="Hint:"
                layout="pack"
                resizable="width"
            />
            <ttklabel
                textvariable="lbl_info_hint"
                wraplength="180"
                layout="pack"
                resizable="width"
            />
            <!-- spacer -->
            <ttkframe
                width="240"
                layout="pack"
                resizable="height"
            />
        </ttklabelframe>
    </ttkpanedwindow>
</tkwidget>
