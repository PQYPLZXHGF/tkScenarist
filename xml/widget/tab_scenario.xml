<tkwidget>
    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >
        <!-- navigation frame -->
        <ttklabelframe
            text="Navigation"
            padding="2px"
            weight="1"
        >
            <ttklabel
                text="dummy text"
                width="20"
                layout="pack"
                resizable="yes"
            />
        </ttklabelframe>

        <!-- scenario frame -->

        <ttklabelframe
            text="Scenario"
            padding="2px"
            weight="5"
        >
            <!-- toolbar info -->
            <ttkframe
                layout="pack"
                resizable="width"
            >
                <ttklabel
                    text="Current element:"
                    layout="grid"
                    layout_options="row=0, column=0"
                />
                <ttklabel
                    textvariable="scenario_current_element"
                    layout="grid"
                    layout_options="row=0, column=1"
                    resizable="yes"
                />
                <ttklabel
                    text="&lt;TAB&gt;:"
                    layout="grid"
                    layout_options="row=0, column=2"
                />
                <ttklabel
                    textvariable="scenario_tab_element"
                    layout="grid"
                    layout_options="row=0, column=3"
                    resizable="yes"
                />
                <ttklabel
                    text="&lt;RETURN&gt;:"
                    layout="grid"
                    layout_options="row=0, column=4"
                />
                <ttklabel
                    textvariable="scenario_return_element"
                    layout="grid"
                    layout_options="row=0, column=5"
                    resizable="yes"
                />
            </ttkframe>
            <!-- scenario text frame -->
            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <module
                    id="mscenario_text"
                    from="src"
                    import="scenario_text"
                    as="SCT"
                />
                <widget
                    id="scenario"
                    name="text_scenario"
                    class="ScenarioText"
                    module="mscenario_text"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="yes"
                />
                <tkevent
                    widget="scenario"
                    seq="Key"
                    slot="@Text:Key:Pressed"
                />
                <ttkscrollbar
                    connect="scenario"
                    orient="vertical"
                    layout="grid"
                    layout_options="row=0, column=1"
                    resizable="height"
                />
                <ttkscrollbar
                    connect="scenario"
                    orient="horizontal"
                    layout="grid"
                    layout_options="row=1, column=0"
                    resizable="width"
                />
            </ttkframe>
        </ttklabelframe>

        <!-- information frame -->

        <ttklabelframe
            text="Information"
            padding="2px"
            weight="1"
        >
            <ttklabel
                text="dummy text"
                width="20"
                layout="pack"
                resizable="yes"
            />
        </ttklabelframe>
    </ttkpanedwindow>
</tkwidget>
