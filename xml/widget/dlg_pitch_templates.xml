<tkwidget>

    <!-- all tools big frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <ttkpanedwindow
            orient="vertical"
            layout="grid"
            layout_options="row=0, column=0"
            resizable="yes"
        >

            <!-- templates list -->

            <ttklabelframe
                text="Templates"
                layout="pack"
                resizable="yes"
                weight="4"
            >

                <!-- info frame -->

                <ttkframe
                    padding="5px 2px"
                    layout="pack"
                    resizable="width"
                >
                    <ttklabel
                        text="Directory:"
                        layout="grid"
                        layout_options="row=0, column=0, sticky='w'"
                        resizable="no"
                    />
                    <ttklabel
                        textvariable="current_dir"
                        foreground="royal blue"
                        layout="grid"
                        layout_options="row=0, column=1, padx=5"
                        resizable="width"
                    />
                </ttkframe>

                <!-- listbox frame -->

                <ttkframe
                    padding="5px"
                    layout="pack"
                    resizable="yes"
                >
                    <listbox
                        id="templates_list"
                        name="listbox_templates_list"
                        height="5"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="yes"
                    />
                    <ttkscrollbar
                        connect="templates_list"
                        orient="vertical"
                        layout="grid"
                        layout_options="row=0, column=1"
                        resizable="height"
                    />
                </ttkframe>
            </ttklabelframe>

            <!-- template preview -->

            <ttklabelframe
                text="Preview"
                layout="pack"
                resizable="yes"
                weight="1"
            >

                <!-- info frame -->

                <ttkframe
                    padding="5px 2px"
                    layout="pack"
                    resizable="width"
                >
                    <ttklabel
                        text="Template name:"
                        layout="grid"
                        layout_options="row=0, column=0, sticky='w'"
                        resizable="no"
                    />
                    <ttklabel
                        textvariable="template_name"
                        font="sans 12 bold"
                        foreground="royal blue"
                        layout="grid"
                        layout_options="row=0, column=1, padx=5"
                        resizable="width"
                    />
                </ttkframe>

                <!-- text frame -->

                <ttkframe
                    padding="5px"
                    layout="pack"
                    resizable="yes"
                >
                    <text
                        id="template_preview"
                        name="text_template_preview"
                        font="monospace 10"
                        height="10"
                        width="72"
                        state="disabled"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="yes"
                    />
                    <ttkscrollbar
                        connect="template_preview"
                        orient="vertical"
                        layout="grid"
                        layout_options="row=0, column=1"
                        resizable="height"
                    />
<!--
                    <ttkscrollbar
                        connect="template_preview"
                        orient="horizontal"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="width"
                    />
-->
                </ttkframe>
            </ttklabelframe>
        </ttkpanedwindow>

        <!-- spacer -->

        <ttkframe
            width="5"
            height="0"
            layout="grid"
            layout_options="row=0, column=1"
            resizable="no"
        />

        <!-- buttons -->

        <ttklabelframe
            text="Edition"
            padding="5px 2px"
            layout="grid"
            layout_options="row=0, column=2"
            resizable="yes"
        >
            <ttkbutton
                name="btn_add"
                text="Add new"
                command="@Dialog:Template:New"
                layout="pack"
                layout_options="pady=5"
                resizable="width"
            />
            <ttkbutton
                name="btn_delete"
                text="Delete"
                command="@Dialog:Template:Delete"
                state="disabled"
                layout="pack"
                layout_options="pady=5"
                resizable="width"
            />
            <!-- spacer -->
            <ttkframe
                height="5"
                width="0"
                layout="pack"
                resizable="no"
            />
            <ttkseparator
                layout="pack"
                resizable="width"
            />
            <ttkframe
                height="5"
                width="0"
                layout="pack"
                resizable="no"
            />
            <ttkbutton
                name="btn_browse"
                text="Browse"
                command="@Dialog:Template:Browse"
                layout="pack"
                layout_options="pady=5"
                resizable="width"
            />
            <ttkbutton
                name="btn_reset_dir"
                text="Reset to default dir"
                command="@Dialog:Template:ResetDir"
                layout="pack"
                layout_options="pady=5"
                resizable="width"
            />
        </ttklabelframe>
    </ttkframe>

    <!-- options -->

    <ttklabelframe
        text="Options"
        padding="5px"
        layout="pack"
        resizable="yes"
    >
        <ttkcheckbutton
            text="Insert a copy into Pitch/Concept"
            variable="chk_copy_to_pitch"
            onvalue="1"
            offvalue=""
            checked="yes"
            layout="pack"
            resizable="width"
        />
        <ttkcheckbutton
            text="Insert a copy into Draft/Notes"
            variable="chk_copy_to_notes"
            onvalue="1"
            offvalue=""
            layout="pack"
            resizable="width"
        />
    </ttklabelframe>
</tkwidget>
