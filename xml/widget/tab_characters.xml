<tkwidget>
    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >
        <!-- characters list + logs -->
        <ttkpanedwindow
            orient="vertical"
            weight="1"
        >
            <!-- characters list -->
            <ttklabelframe
                text="Characters"
                padding="2px"
                layout="pack"
                resizable="yes"
                weight="1"
            >
                <ttkframe
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="yes"
                >
                    <!-- characters listbox widget -->
                    <listbox
                        id="characters_list"
                        name="listbox_characters_list"
                        height="5"
                        width="1"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="yes"
                    />
                    <ttkscrollbar
                        connect="characters_list"
                        orient="vertical"
                        layout="grid"
                        layout_options="row=0, column=1"
                        resizable="height"
                    />
                </ttkframe>
                <!-- listbox edition toolbar -->
                <ttkframe
                    padding="0 3px 0 0"
                    layout="grid"
                    layout_options="row=1, column=0"
                    resizable="width"
                >
                    <ttkbutton
                        name="btn_add"
                        text="+"
                        command="@Characters:List:Add"
                        width="2"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="no"
                    />
                    <ttkbutton
                        name="btn_delete"
                        text="-"
                        command="@Characters:List:Delete"
                        width="2"
                        layout="grid"
                        layout_options="row=0, column=1"
                        resizable="no"
                    />
                    <!-- spacer -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=0, column=2"
                        resizable="width"
                    />
                    <ttkbutton
                        name="btn_rename"
                        text="Rename"
                        command="@Characters:List:Rename"
                        layout="grid"
                        layout_options="row=0, column=3"
                        resizable="no"
                    />
                    <!-- spacer -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=0, column=4"
                        resizable="width"
                    />
                    <ttkbutton
                        name="btn_purge"
                        text="Purge"
                        command="@Characters:List:Purge"
                        layout="grid"
                        layout_options="row=0, column=5"
                        resizable="no"
                    />
                </ttkframe>
            </ttklabelframe>

            <!-- character's log zone -->

            <ttklabelframe
                text="Character's log"
                padding="2px"
                layout="pack"
                resizable="yes"
                weight="2"
            >
                <!-- character's log info/text -->
                <ttkframe
                    layout="pack"
                    resizable="yes"
                >
                    <!-- character's name -->
                    <ttklabel
                        textvariable="log_character_name"
                        anchor="center"
                        font="sans 12 bold"
                        foreground="royal blue"
                        layout="grid"
                        layout_options="row=0, column=0, pady=2"
                        resizable="width"
                    />
                    <!-- character's text widget -->
                    <text
                        id="characters_log"
                        name="text_characters_log"
                        height="10"
                        width="1"
                        autoseparators="true"
                        state="disabled"
                        undo="true"
                        wrap="word"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    />
                    <tkevent
                        widget="characters_log"
                        seq="Key"
                        slot="@Text:Key:Pressed"
                    />
                    <ttkscrollbar
                        connect="characters_log"
                        orient="vertical"
                        layout="grid"
                        layout_options="row=1, column=1"
                        resizable="height"
                    />
                </ttkframe>
            </ttklabelframe>
        </ttkpanedwindow>

        <!-- characters' relations -->

        <ttklabelframe
            text="Relations"
            padding="2px"
            layout="pack"
            resizable="yes"
            weight="3"
        >
            <!-- help text label -->
            <ttklabel
                text="Hint: 'Shift-Click-Drag': create relation. 'Ctrl-Click': remove item."
                layout="grid"
                layout_options="row=0, column=0"
                resizable="width"
            />
            <!-- characters' relations canvas widget -->
            <module
                id="mchars_rels"
                from="src"
                import="characters_canvas"
                as="CCR"
            />
            <widget
                id="characters_relations"
                name="canvas_characters_relations"
                class="CharactersCanvas"
                module="mchars_rels"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="yes"
            />
            <ttkscrollbar
                connect="characters_relations"
                orient="vertical"
                layout="grid"
                layout_options="row=1, column=1"
                resizable="height"
            />
            <ttkscrollbar
                connect="characters_relations"
                orient="horizontal"
                layout="grid"
                layout_options="row=2, column=0"
                resizable="width"
            />
        </ttklabelframe>
    </ttkpanedwindow>
</tkwidget>
