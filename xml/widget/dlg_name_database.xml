<tkwidget>

    <!-- all tools big frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <!-- names listing zone -->

        <ttklabelframe
            text="Names"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=0, rowspan=2"
            resizable="yes"
        >
            <!-- names listing DBView widget -->
            <module
                id="m_dbviewcanvas"
                from="src"
                import="dbview_canvas"
            />
            <widget
                id="w_dbview_names"
                name="dbview_names"
                class="DBViewCanvas"
                module="m_dbviewcanvas"
                font="monospace 10"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="yes"
            />
            <ttkscrollbar
                connect="w_dbview_names"
                orient="vertical"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="height"
            />
            <ttkscrollbar
                connect="w_dbview_names"
                orient="horizontal"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="width"
            />
        </ttklabelframe>

        <!-- vertical spacer -->

        <ttkframe
            width="5"
            layout="grid"
            layout_options="row=0, column=1"
            resizable="no"
        />

        <!-- searching zone -->

        <ttklabelframe
            text="Search"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=2"
            resizable="yes"
        >
            <ttklabel
                text="Mention:"
                layout="pack"
                resizable="width"
            />
            <ttkentry
                textvariable="search_mention"
                layout="pack"
                resizable="width"
            />
            <ttkseparator
                layout="pack"
                layout_options="pady=10"
                resizable="width"
            />
            <ttklabel
                text="Into:"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Name"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_name"
                onvalue="1"
                offvalue="0"
                checked="true"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Origin"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_origin"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Description"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_description"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkseparator
                layout="pack"
                layout_options="pady=10"
                resizable="width"
            />
            <ttklabel
                text="Filter:"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Male names"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_male"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Female names"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_female"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

        <!-- tools zone -->

        <ttklabelframe
            text="Tools"
            padding="5px"
            layout="grid"
            layout_options="row=1, column=2"
            resizable="yes"
        >
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

        <!-- DB record edition zone -->

        <ttklabelframe
            text="Edition"
            padding="5px"
            layout="grid"
            layout_options="row=2, column=0, columnspan=3"
            resizable="yes"
        >
            <ttklabel
                text="Name:"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="no"
            />
            <ttkentry
                textvariable="edit_name"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="width"
            />
            <ttkcheckbutton
                text="Male"
                variable="edit_chk_male"
                onvalue="1"
                offvalue="0"
                layout="grid"
                layout_options="row=0, column=5, padx=5, sticky='w'"
                resizable="no"
            />
            <ttkcheckbutton
                text="Female"
                variable="edit_chk_female"
                onvalue="1"
                offvalue="0"
                layout="grid"
                layout_options="row=0, column=6"
                resizable="width"
            />
            <ttklabel
                text="Origin:"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="no"
            />
            <ttkcombobox
                textvariable="edit_origin"
                height="10"
                postcommand="@Dialog:NameDB:Edit:Origin:Drop:List"
                validate="key"
                validatecommand="@Dialog:NameDB:Edit:Origin:Keypress"
                layout="grid"
                layout_options="row=1, column=1"
                resizable="width"
            />
            <ttklabel
                text="Description:"
                layout="grid"
                layout_options="row=1, column=5, padx=5, sticky='w'"
                resizable="no"
            />
            <ttkentry
                textvariable="edit_description"
                layout="grid"
                layout_options="row=1, column=6"
                resizable="width"
            />
        </ttklabelframe>

    </ttkframe>
</tkwidget>
