<tkwidget>

    <!-- all tools big frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <!-- names listing zone -->

        <ttklabelframe
            text="Names"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=0, rowspan=2"
            resizable="yes"
        >
            <!-- names listing DBView widget -->
            <module
                id="m_dbviewcanvas"
                from="src"
                import="dbview_canvas"
            />
            <widget
                id="w_dbview_names"
                name="dbview_names"
                class="DBViewCanvas"
                module="m_dbviewcanvas"
                font="monospace 10"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="height"
            />
            <ttkscrollbar
                connect="w_dbview_names"
                orient="vertical"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="height"
            />
            <ttkscrollbar
                connect="w_dbview_names"
                orient="horizontal"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="width"
            />
        </ttklabelframe>

        <!-- vertical spacer -->

        <ttkframe
            width="5"
            layout="grid"
            layout_options="row=0, column=1"
            resizable="no"
        />

        <!-- searching zone -->

        <ttklabelframe
            text="Search"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=2"
            resizable="yes"
        >
            <ttklabel
                text="Mention:"
                layout="pack"
                resizable="width"
            />
            <ttkentry
                textvariable="search_mention"
                layout="pack"
                resizable="width"
            />
            <ttkseparator
                layout="pack"
                layout_options="pady=10"
                resizable="width"
            />
            <ttklabel
                text="Into:"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Name"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_name"
                onvalue="1"
                offvalue="0"
                checked="checked"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Origin"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_origin"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Description"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_description"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkseparator
                layout="pack"
                layout_options="pady=10"
                resizable="width"
            />
            <ttklabel
                text="Show:"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="All names"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_all"
                onvalue="1"
                offvalue="0"
                checked="checked"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Male names"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_male"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Female names"
                command="@Dialog:NameDB:Search:Criteria:Changed"
                variable="search_chk_female"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

        <!-- tools zone -->

        <ttklabelframe
            text="Tools"
            padding="5px"
            layout="grid"
            layout_options="row=1, column=2"
            resizable="yes"
        >
            <ttkbutton
                text="Show next"
                command="@Dialog:NameDB:Show:Next"
                layout="pack"
                resizable="width"
            />
            <ttkbutton
                text="Show previous"
                command="@Dialog:NameDB:Show:Previous"
                layout="pack"
                resizable="width"
            />
            <ttkseparator
                layout="pack"
                layout_options="pady=5"
                resizable="width"
            />
            <ttkbutton
                text="Import file (CSV)"
                command="@Dialog:NameDB:Import:File"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

    </ttkframe>
</tkwidget>
