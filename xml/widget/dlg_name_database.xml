<tkwidget>

    <!-- all tools big frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <!-- names listing zone -->

        <ttklabelframe
            text="Names"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=0, rowspan=2"
            resizable="yes"
        >
            <ttktreeview
                layout="pack"
                resizable="yes"
            />
        </ttklabelframe>

        <!-- vertical spacer -->

        <ttkframe
            width="5"
            layout="grid"
            layout_options="row=0, column=1"
            resizable="no"
        />

        <!-- searching zone -->

        <ttklabelframe
            text="Search"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=2"
            resizable="yes"
        >
            <ttkentry
                textvariable="entry_search_kw"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

        <!-- tools zone -->

        <ttklabelframe
            text="Tools"
            padding="5px"
            layout="grid"
            layout_options="row=1, column=2"
            resizable="yes"
        >
            <ttkbutton
                text="Import"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

        <!-- user options zone -->

        <ttklabelframe
            text="Options"
            padding="5px"
            layout="grid"
            layout_options="row=2, column=0, columnspan=3"
            resizable="yes"
        >
            <ttklabel
                text="User options here"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

    </ttkframe>
</tkwidget>
