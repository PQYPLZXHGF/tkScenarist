<tkwidget>

    <!-- all tools big frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <!-- names listing zone -->

        <ttklabelframe
            text="Names"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=0, rowspan=2"
            resizable="yes"
        >
            <!-- names listing DBView widget -->
            <text
                id="dbview_names"
                name="text_dbview_names"
                font="monospace 10"
                height="20"
                width="60"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="yes"
            />
            <ttkscrollbar
                connect="dbview_names"
                orient="vertical"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="height"
            />
            <ttkscrollbar
                connect="dbview_names"
                orient="horizontal"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="width"
            />
        </ttklabelframe>

        <!-- vertical spacer -->

        <ttkframe
            width="5"
            layout="grid"
            layout_options="row=0, column=1"
            resizable="no"
        />

        <!-- searching zone -->

        <ttklabelframe
            text="Search"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=2"
            resizable="yes"
        >
            <ttkentry
                textvariable="entry_search"
                layout="pack"
                resizable="width"
            />
            <ttklabel
                text="into:"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Name"
                variable="chk_name"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Origin"
                variable="chk_origin"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Description"
                variable="chk_description"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttklabel
                text="filter:"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Male names"
                variable="chk_male"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
            <ttkcheckbutton
                text="Female names"
                variable="chk_female"
                onvalue="1"
                offvalue="0"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

        <!-- tools zone -->

        <ttklabelframe
            text="Tools"
            padding="5px"
            layout="grid"
            layout_options="row=1, column=2"
            resizable="yes"
        >
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
            <ttkbutton
                text="Action"
                command="@Dialog:NameDB:Action"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

        <!-- user options zone -->

        <ttklabelframe
            text="Options"
            padding="5px"
            layout="grid"
            layout_options="row=2, column=0, columnspan=3"
            resizable="yes"
        >
            <ttklabel
                text="User options here"
                layout="pack"
                resizable="width"
            />
        </ttklabelframe>

    </ttkframe>
</tkwidget>
