<tkwidget>

    <!-- main paned window -->

    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >

        <!-- navigation zone -->

        <ttklabelframe
            text="Navigation"
            padding="5px"
            weight="2"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- scene browser -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Scene browser:"
                        layout="pack"
                        resizable="width"
                    />
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <listbox
                            id="stb_scene_browser"
                            name="listbox_scene_browser"
                            height="10"
                            width="10"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_scene_browser"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="stb_scene_browser"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- shot browser / manager -->

                <ttkframe
                    weight="3"
                >
                    <ttklabel
                        text="Shot browser:"
                        layout="pack"
                        resizable="width"
                    />
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <listbox
                            id="stb_shot_browser"
                            name="listbox_shot_browser"
                            height="10"
                            width="10"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_shot_browser"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="stb_shot_browser"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- edition zone -->

        <ttklabelframe
            text="Edition"
            padding="5px"
            weight="3"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- scene preview -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Scene preview:"
                        layout="pack"
                        resizable="width"
                    />
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <text
                            id="stb_scene_preview"
                            name="text_scene_preview"
                            height="10"
                            width="10"
                            state="disabled"
                            wrap="word"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_scene_preview"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                    </ttkframe>
                </ttkframe>

            <!-- shot editor -->

                <ttkframe
                    weight="2"
                >
                    <ttklabel
                        text="Shot editor:"
                        layout="pack"
                        resizable="width"
                    />
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <text
                            id="stb_shot_editor"
                            name="text_shot_editor"
                            height="20"
                            width="60"
                            wrap="word"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_shot_editor"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- information zone -->

        <ttklabelframe
            text="Information"
            padding="5px"
            weight="1"
        >
            <!-- info -->

            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- zone 1 -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Zone 1 (WIP)"
                        width="12"
                        layout="pack"
                        resizable="width"
                    />
                </ttkframe>

                <!-- zone 2 -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Zone 2 (WIP)"
                        width="12"
                        layout="pack"
                        resizable="width"
                    />
                </ttkframe>

                <!-- zone 3 -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Zone 3 (WIP)"
                        width="12"
                        layout="pack"
                        resizable="width"
                    />
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

    </ttkpanedwindow>
</tkwidget>
