<tkwidget>

    <!-- main paned window -->

    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >

        <!-- navigation zone -->

        <ttklabelframe
            text="Navigation"
            padding="5px"
            weight="1"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- scene browser -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Scene browser:"
                        layout="pack"
                        resizable="width"
                    />
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <listbox
                            id="stb_scene_browser"
                            name="listbox_scene_browser"
                            height="5"
                            width="10"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_scene_browser"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="stb_scene_browser"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- shot browser / manager -->

                <ttkframe
                    weight="3"
                >
                    <ttklabel
                        text="Shot browser:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />

                    <!-- listbox zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    >
                        <listbox
                            id="stb_shot_browser"
                            name="listbox_shot_browser"
                            height="10"
                            width="10"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_shot_browser"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="stb_shot_browser"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>

                    <!-- spacer -->

                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />

                    <!-- toolbar zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_shot"
                            text="+"
                            command="@Storyboard:Shot:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_shot"
                            text="-"
                            command="@Storyboard:Shot:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- edition zone -->

        <ttklabelframe
            text="Storyboard"
            padding="5px"
            weight="2"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- scene preview -->

                <ttkframe
                    weight="1"
                >
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <ttklabel
                            text="Scene preview:"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttklabel
                            textvariable="lbl_scene_number"
                            font="sans 10 bold"
                            foreground="royal blue"
                            layout="grid"
                            layout_options="row=0, column=1, padx=5"
                            resizable="width"
                        />
                    </ttkframe>
                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <text
                            id="stb_scene_preview"
                            name="text_scene_preview"
                            height="10"
                            width="10"
                            state="disabled"
                            wrap="word"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_scene_preview"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- shot editor -->

                <ttkframe
                    weight="3"
                >
                    <ttklabel
                        text="Shot editor:"
                        layout="pack"
                        resizable="width"
                    />

                    <!-- shot number + title -->

                    <ttkframe
                        padding="0 0 0 3px"
                        layout="pack"
                        resizable="yes"
                    >
                        <ttklabel
                            textvariable="lbl_shot_number"
                            font="sans 12 bold"
                            foreground="royal blue"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="no"
                        />
                        <ttkentry
                            name="entry_shot_title"
                            width="25"
                            state="disabled"
                            layout="grid"
                            layout_options="row=0, column=1, padx=5"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_rename_shot"
                            text="Rename"
                            command="@Storyboard:Shot:Rename"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=2"
                        />
                    </ttkframe>

                    <!-- shot text editor -->

                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <text
                            id="stb_shot_editor"
                            name="text_shot_editor"
                            height="20"
                            width="40"
                            wrap="word"
                            state="disabled"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="stb_shot_editor"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- information zone -->

        <ttklabelframe
            text="Information"
            padding="5px"
            weight="1"
        >
            <!-- info -->

            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- zone 1 -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Zone 1 (WIP)"
                        width="12"
                        layout="pack"
                        resizable="width"
                    />
                </ttkframe>

                <!-- zone 2 -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Zone 2 (WIP)"
                        width="12"
                        layout="pack"
                        resizable="width"
                    />
                </ttkframe>

                <!-- zone 3 -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Zone 3 (WIP)"
                        width="12"
                        layout="pack"
                        resizable="width"
                    />
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

    </ttkpanedwindow>
</tkwidget>
