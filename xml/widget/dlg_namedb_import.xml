<tkwidget>

    <!-- main frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <!-- file selection zone -->

        <ttklabelframe
            text="File to import"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <!-- browse file zone -->
            <ttklabel
                text="Location:"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="no"
            />
            <ttklabel
                textvariable="lbl_file_path"
                foreground="royal blue"
                width="40"
                layout="grid"
                layout_options="row=0, column=1, padx=5"
                resizable="width"
            />
            <ttkbutton
                name="btn_browse_file"
                text="Browse"
                command="@Dialog:Import:File:Browse"
                layout="grid"
                layout_options="row=0, column=2"
                resizable="no"
            />
        </ttklabelframe>

        <!-- file contents zone -->

        <ttklabelframe
            text="Preview"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <!-- file contents preview frame -->
            <text
                id="dni_fc_preview"
                name="text_fc_preview"
                font="monospace 8"
                width="40"
                height="5"
                wrap="none"
                state="disabled"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="yes"
            />
            <ttkscrollbar
                connect="dni_fc_preview"
                orient="vertical"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="height"
            />
            <ttkscrollbar
                connect="dni_fc_preview"
                orient="horizontal"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="width"
            />
        </ttklabelframe>

        <!-- fields to import zone -->

        <ttklabelframe
            text="Fields"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <!-- labels -->
            <ttklabel
                text="Name:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="width"
            />
            <ttklabel
                text="Gender:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="width"
            />
            <ttklabel
                text="Origin:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=2"
                resizable="width"
            />
            <ttklabel
                text="Description:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=3"
                resizable="width"
            />
            <!-- choice lists -->
            <ttkcombobox
                name="column_name"
                width="1"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="width"
            />
            <ttkcombobox
                name="column_gender"
                width="1"
                layout="grid"
                layout_options="row=1, column=1"
                resizable="width"
            />
            <ttkcombobox
                name="column_origin"
                width="1"
                layout="grid"
                layout_options="row=1, column=2"
                resizable="width"
            />
            <ttkcombobox
                name="column_description"
                width="1"
                layout="grid"
                layout_options="row=1, column=3"
                resizable="width"
            />
        </ttklabelframe>

        <!-- importing tool zone -->

        <ttklabelframe
            text="Import"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <!-- labels -->
            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <ttklabel
                    text="Status:"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="no"
                />
                <ttklabel
                    textvariable="lbl_status"
                    layout="grid"
                    layout_options="row=0, column=1"
                    resizable="width"
                />
            </ttkframe>
            <!-- tools -->
            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <ttkprogressbar
                    name="pgbar_import"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="width"
                />
                <!-- spacer -->
                <ttkframe
                    width="5"
                    layout="grid"
                    layout_options="row=0, column=1"
                    resizable="no"
                />
                <ttkbutton
                    name="btn_import"
                    text="Import"
                    command="@Dialog:Import:File:Import"
                    layout="grid"
                    layout_options="row=0, column=2"
                    resizable="no"
                />
            </ttkframe>
        </ttklabelframe>
    </ttkframe>
</tkwidget>
