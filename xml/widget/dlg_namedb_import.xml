<tkwidget>

    <!-- main frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <!-- file selection zone -->

        <ttklabelframe
            text="File to import"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=0"
            resizable="yes"
        >
            <!-- browse file zone -->
            <ttklabel
                text="Location:"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="no"
            />
            <ttklabel
                textvariable="lbl_file_path"
                foreground="royal blue"
                width="40"
                layout="grid"
                layout_options="row=0, column=1, padx=5"
                resizable="width"
            />
            <ttkbutton
                name="btn_browse_file"
                text="Browse"
                command="@Dialog:Import:File:Browse"
                layout="grid"
                layout_options="row=0, column=2"
                resizable="no"
            />
        </ttklabelframe>

        <!-- file contents zone -->

        <ttklabelframe
            text="Preview"
            padding="5px"
            layout="grid"
            layout_options="row=1, column=0"
            resizable="yes"
        >
            <!-- file contents preview frame -->
            <text
                id="dni_fc_preview"
                name="text_fc_preview"
                font="monospace 8"
                width="40"
                height="5"
                wrap="none"
                state="disabled"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="yes"
            />
            <ttkscrollbar
                connect="dni_fc_preview"
                orient="vertical"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="height"
            />
            <ttkscrollbar
                connect="dni_fc_preview"
                orient="horizontal"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="width"
            />
        </ttklabelframe>

        <!-- fields to import zone -->

        <ttklabelframe
            text="Fields"
            padding="5px"
            layout="grid"
            layout_options="row=2, column=0"
            resizable="yes"
        >
            <!-- labels -->
            <ttklabel
                text="Name:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="width"
            />
            <ttklabel
                text="Gender:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="width"
            />
            <ttklabel
                text="Origin:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=2"
                resizable="width"
            />
            <ttklabel
                text="Description:"
                anchor="center"
                layout="grid"
                layout_options="row=0, column=3"
                resizable="width"
            />
            <!-- choice lists -->
            <listbox
                name="column_name"
                choices="'--- not found ---', 'column#1', 'column#2', 'column#3', 'column#4', 'column#5', 'column#6'"
                start="@0"
                height="5"
                width="10"
                layout="grid"
                layout_options="row=1, column=0"
                resizable="width"
            />
            <listbox
                name="column_gender"
                choices="'--- not found ---', 'column#1', 'column#2', 'column#3', 'column#4', 'column#5', 'column#6'"
                start="@0"
                height="5"
                width="10"
                layout="grid"
                layout_options="row=1, column=1"
                resizable="width"
            />
            <listbox
                name="column_origin"
                choices="'--- not found ---', 'column#1', 'column#2', 'column#3', 'column#4', 'column#5', 'column#6'"
                start="@0"
                height="5"
                width="10"
                layout="grid"
                layout_options="row=1, column=2"
                resizable="width"
            />
            <listbox
                name="column_description"
                choices="'--- not found ---', 'column#1', 'column#2', 'column#3', 'column#4', 'column#5', 'column#6'"
                start="@0"
                height="5"
                width="10"
                layout="grid"
                layout_options="row=1, column=3"
                resizable="width"
            />
        </ttklabelframe>

    </ttkframe>
</tkwidget>
