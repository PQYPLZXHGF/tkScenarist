<tkwidget>

    <!-- main frame -->

    <ttkframe
        layout="pack"
        resizable="yes"
    >
        <!-- file selection zone -->

        <ttklabelframe
            text="File"
            padding="5px"
            layout="grid"
            layout_options="row=0, column=0"
            resizable="yes"
        >
            <!-- browse file zone -->
            <ttklabel
                text="Location:"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="no"
            />
            <ttklabel
                textvariable="lbl_file_path"
                foreground="royal blue"
                width="40"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="no"
            />
            <ttkbutton
                name="btn_browse_file"
                text="Browse"
                command="@Dialog:Import:File:Browse"
                layout="grid"
                layout_options="row=0, column=2"
                resizable="no"
            />
        </ttklabelframe>

        <!-- file contents zone -->

        <ttklabelframe
            text="Contents"
            padding="5px"
            layout="grid"
            layout_options="row=1, column=0"
            resizable="yes"
        >
            <ttklabel
                text="dummy"
                layout="pack"
                resizable="yes"
            />
        </ttklabelframe>

    </ttkframe>
</tkwidget>
