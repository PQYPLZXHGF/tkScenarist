<tkwidget>
    <ttklabelframe
        text="Extra notes"
        padding="5px"
        layout="pack"
        resizable="yes"
    >
        <text
            id="draft_notes"
            name="text_draft_notes"
            layout="grid"
            layout_options="row=0, column=0"
            resizable="yes"
        />
        <tkevent
            widget="draft_notes"
            seq="Key"
            slot="@Text:Key:Pressed"
        />
        <ttkscrollbar
            connect="draft_notes"
            orient="vertical"
            layout="grid"
            layout_options="row=0, column=1"
            resizable="height"
        />
        <ttkscrollbar
            connect="draft_notes"
            orient="horizontal"
            layout="grid"
            layout_options="row=1, column=0"
            resizable="width"
        />
    </ttklabelframe>
</tkwidget>
