<tkwidget>

    <!-- main paned window -->

    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >

        <!-- resources zone -->

        <ttklabelframe
            text="Resources"
            weight="1"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- resource type manager -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Type:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />
                    <ttkcombobox
                        name="combo_res_type"
                        width="1"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="width"
                    />
                    <!-- spacer -->
                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />
                    <!-- toolbar zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_type"
                            text="+"
                            command="@Resources:Type:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_delete_type"
                            text="-"
                            command="@Resources:Type:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_rename_type"
                            text="Rename"
                            command="@Resources:Type:Rename"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- resource section manager -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Section:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />
                    <ttkcombobox
                        name="combo_res_section"
                        width="1"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="width"
                    />
                    <!-- spacer -->
                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />
                    <!-- toolbar zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_section"
                            text="+"
                            command="@Resources:Section:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_delete_section"
                            text="-"
                            command="@Resources:Section:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_rename_section"
                            text="Rename"
                            command="@Resources:Section:Rename"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- resource item manager -->

                <ttkframe
                    weight="3"
                >
                    <ttklabel
                        text="Item:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />
                    <!-- listbox zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    >
                        <listbox
                            id="res_items_list"
                            name="listbox_res_item"
                            height="8"
                            width="1"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="res_items_list"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="res_items_list"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>
                    <!-- spacer -->
                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />
                    <!-- toolbar zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_item"
                            text="+"
                            command="@Resources:Item:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_delete_item"
                            text="-"
                            command="@Resources:Item:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_rename_item"
                            text="Rename"
                            command="@Resources:Item:Rename"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- planning / edition zone -->

        <ttkpanedwindow
            orient="vertical"
            weight="4"
        >

            <!-- planning canvas -->

            <ttklabelframe
                text="Planning"
                weight="1"
            >
                <ttklabel
                    text="Hint: &lt;Double-Click&gt;: add new. &lt;Ctrl-Click&gt;: remove item."
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="width"
                />
                <module
                    id="m_resources_canvas"
                    from="src"
                    import="resources_canvas"
                />
                <widget
                    id="res_planning"
                    name="canvas_resources_planning"
                    class="ResourcesCanvas"
                    module="m_resources_canvas"
                    layout="grid"
                    layout_options="row=1, column=0"
                    resizable="yes"
                />
                <ttkscrollbar
                    connect="res_planning"
                    orient="vertical"
                    layout="grid"
                    layout_options="row=1, column=1"
                    resizable="height"
                />
                <ttkscrollbar
                    connect="res_planning"
                    orient="horizontal"
                    layout="grid"
                    layout_options="row=2, column=0"
                    resizable="width"
                />
            </ttklabelframe>

            <!-- data / notes edition -->

            <ttkpanedwindow
                orient="horizontal"
                weight="3"
            >

                <!-- data form -->

                <ttklabelframe
                    text="Data"
                    weight="3"
                >
                    <!-- ID/name entry -->
                    <ttklabel
                        text="Name:"
                        layout="grid"
                        layout_options="row=0, column=0, sticky='w'"
                    />
                    <!-- spacer -->
                    <ttkframe
                        width="5"
                        layout="grid"
                        layout_options="row=0, column=1"
                    />
                    <ttkentry
                        name="entry_res_name"
                        state="disabled"
                        width="1"
                        layout="grid"
                        layout_options="row=0, column=2, pady=2"
                        resizable="width"
                    />
                    <!-- role entry -->
                    <ttklabel
                        text="Role:"
                        layout="grid"
                        layout_options="row=1, column=0, sticky='w'"
                    />
                    <ttkentry
                        name="entry_res_role"
                        state="disabled"
                        width="1"
                        layout="grid"
                        layout_options="row=1, column=2, pady=2"
                        resizable="width"
                    />
                    <!-- contact entry -->
                    <ttklabel
                        text="Contact:"
                        layout="grid"
                        layout_options="row=2, column=0, sticky='w'"
                    />
                    <ttkentry
                        name="entry_res_contact"
                        state="disabled"
                        width="1"
                        layout="grid"
                        layout_options="row=2, column=2, pady=2"
                        resizable="width"
                    />
                    <!-- phone contact entry -->
                    <ttklabel
                        text="Phone:"
                        layout="grid"
                        layout_options="row=3, column=0, sticky='w'"
                    />
                    <ttkentry
                        name="entry_res_phone"
                        state="disabled"
                        width="1"
                        layout="grid"
                        layout_options="row=3, column=2, pady=2"
                        resizable="width"
                    />
                    <!-- e-mail contact entry -->
                    <ttklabel
                        text="E-mail:"
                        layout="grid"
                        layout_options="row=4, column=0, sticky='w'"
                    />
                    <ttkentry
                        name="entry_res_email"
                        state="disabled"
                        width="1"
                        layout="grid"
                        layout_options="row=4, column=2, pady=2"
                        resizable="width"
                    />
                </ttklabelframe>

                <!-- notes / remarks -->

                <ttklabelframe
                    text="Notes"
                    weight="1"
                >
                    <!-- notes editor -->

                    <ttkframe
                        layout="pack"
                        resizable="yes"
                    >
                        <text
                            id="res_notes"
                            name="text_notes"
                            autoseparators="true"
                            height="20"
                            state="disabled"
                            undo="true"
                            width="20"
                            wrap="word"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <tkevent
                            widget="res_notes"
                            seq="Key"
                            slot="@Text:Key:Pressed"
                        />
                        <ttkscrollbar
                            connect="res_notes"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                    </ttkframe>
                </ttklabelframe>

            </ttkpanedwindow>
        </ttkpanedwindow>

    </ttkpanedwindow>
</tkwidget>
