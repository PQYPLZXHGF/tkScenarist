<tkwidget>

    <!-- main paned window -->

    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >

        <!-- resources zone -->

        <ttklabelframe
            text="Resources"
            weight="1"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- resource type browser / manager -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Type:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />

                    <!-- listbox zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    >
                        <listbox
                            id="res_types_list"
                            name="listbox_resource_types"
                            height="5"
                            width="10"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="res_types_list"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="res_types_list"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>

                    <!-- spacer -->

                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />

                    <!-- toolbar zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_type"
                            text="+"
                            command="@Resources:Type:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_type"
                            text="-"
                            command="@Resources:Type:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_purge_type"
                            text="Purge"
                            command="@Resources:Type:Purge"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- resource item browser / manager -->

                <ttkframe
                    weight="3"
                >
                    <ttklabel
                        text="Items:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />

                    <!-- listbox zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    >
                        <listbox
                            id="res_items_list"
                            name="listbox_resource_items"
                            height="10"
                            width="10"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="res_items_list"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="res_items_list"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>

                    <!-- spacer -->

                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />

                    <!-- toolbar zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_item"
                            text="+"
                            command="@Resources:Item:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_item"
                            text="-"
                            command="@Resources:Item:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_purge_item"
                            text="Purge"
                            command="@Resources:Item:Purge"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- edition zone -->

        <ttklabelframe
            text="Planning"
            weight="2"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- planning canvas -->

                <ttkframe
                    weight="1"
                >

                </ttkframe>

                <!-- type/item editor -->

                <ttkframe
                    weight="3"
                >

                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

    </ttkpanedwindow>
</tkwidget>
