<tkwidget>

    <!-- main paned window -->

    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >

        <!-- resources zone -->

        <ttklabelframe
            text="Resources"
            weight="1"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- resource type browser / manager -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Type:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />

                    <!-- listbox zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    >
                        <listbox
                            id="res_types_list"
                            name="listbox_resource_types"
                            height="5"
                            width="10"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="res_types_list"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="res_types_list"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>

                    <!-- spacer -->

                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />

                    <!-- toolbar zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_type"
                            text="+"
                            command="@Resources:Type:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_type"
                            text="-"
                            command="@Resources:Type:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_purge_type"
                            text="Purge"
                            command="@Resources:Type:Purge"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- resource section browser / manager -->

                <ttkframe
                    weight="3"
                >
                    <ttklabel
                        text="Section:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />

                    <!-- listbox zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    >
                        <listbox
                            id="res_sections_list"
                            name="listbox_resource_sections"
                            height="10"
                            width="10"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="res_sections_list"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="res_sections_list"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>

                    <!-- spacer -->

                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />

                    <!-- toolbar zone -->

                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_section"
                            text="+"
                            command="@Resources:Section:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_section"
                            text="-"
                            command="@Resources:Section:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_purge_section"
                            text="Purge"
                            command="@Resources:Section:Purge"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- planning / edition zone -->

        <ttklabelframe
            text="Planning"
            weight="3"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- planning canvas -->

                <ttkframe
                    weight="1"
                >
                    <canvas
                        id="res_planning"
                        name="canvas_resources_planning"
                        bg="grey80"
                        highlightbackground="grey20"
                        highlightthickness="1"
                        relief="solid"
                        takefocus="false"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="yes"
                    />
                    <ttkscrollbar
                        connect="res_planning"
                        orient="vertical"
                        layout="grid"
                        layout_options="row=0, column=1"
                        resizable="height"
                    />
                    <ttkscrollbar
                        connect="res_planning"
                        orient="horizontal"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="width"
                    />
                </ttkframe>

                <!-- item / data / notes edition -->

                <ttkpanedwindow
                    orient="horizontal"
                    weight="1"
                >

                    <!-- items list -->

                    <ttklabelframe
                        text="Items"
                        weight="1"
                    >

                        <!-- listbox zone -->

                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        >
                            <listbox
                                id="res_items_list"
                                name="listbox_resource_items"
                                height="10"
                                width="10"
                                highlightthickness="0"
                                takefocus="false"
                                layout="grid"
                                layout_options="row=0, column=0"
                                resizable="yes"
                            />
                            <ttkscrollbar
                                connect="res_items_list"
                                orient="vertical"
                                layout="grid"
                                layout_options="row=0, column=1"
                                resizable="height"
                            />
                            <ttkscrollbar
                                connect="res_items_list"
                                orient="horizontal"
                                layout="grid"
                                layout_options="row=1, column=0"
                                resizable="width"
                            />
                        </ttkframe>

                        <!-- spacer -->

                        <ttkframe
                            height="5"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />

                        <!-- toolbar zone -->

                        <ttkframe
                            layout="grid"
                            layout_options="row=2, column=0"
                            resizable="width"
                        >
                            <ttkbutton
                                name="btn_add_item"
                                text="+"
                                command="@Resources:Item:Add"
                                width="2"
                                takefocus="false"
                                layout="grid"
                                layout_options="row=0, column=0"
                            />
                            <ttkbutton
                                name="btn_del_item"
                                text="-"
                                command="@Resources:Item:Delete"
                                width="2"
                                takefocus="false"
                                layout="grid"
                                layout_options="row=0, column=1"
                            />
                            <!-- spacer -->
                            <ttkframe
                                layout="grid"
                                layout_options="row=0, column=2"
                                resizable="width"
                            />
                            <ttkbutton
                                name="btn_purge_item"
                                text="Purge"
                                command="@Resources:Item:Purge"
                                takefocus="false"
                                layout="grid"
                                layout_options="row=0, column=3"
                            />
                        </ttkframe>
                    </ttklabelframe>

                    <!-- item / data editor -->

                    <ttklabelframe
                        text="Data"
                        weight="1"
                    >
                        <ttklabel
                            text="coming soon... (WIP)"
                            layout="pack"
                        />
                    </ttklabelframe>

                    <!-- notes / remarks -->

                    <ttklabelframe
                        text="Notes"
                        weight="1"
                    >
                        <!-- notes editor -->

                        <ttkframe
                            layout="pack"
                            resizable="yes"
                        >
                            <text
                                id="res_notes"
                                name="text_notes"
                                autoseparators="true"
                                height="10"
                                state="disabled"
                                undo="true"
                                width="10"
                                wrap="word"
                                layout="grid"
                                layout_options="row=0, column=0"
                                resizable="yes"
                            />
                            <tkevent
                                widget="res_notes"
                                seq="Key"
                                slot="@Text:Key:Pressed"
                            />
                            <ttkscrollbar
                                connect="res_notes"
                                orient="vertical"
                                layout="grid"
                                layout_options="row=0, column=1"
                                resizable="height"
                            />
                        </ttkframe>
                    </ttklabelframe>

                </ttkpanedwindow>
            </ttkpanedwindow>
        </ttklabelframe>

    </ttkpanedwindow>
</tkwidget>
