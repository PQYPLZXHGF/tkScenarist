<tkwidget>

    <!-- main paned window -->

    <ttkpanedwindow
        orient="horizontal"
        layout="pack"
        resizable="yes"
    >

        <!-- resources zone -->

        <ttklabelframe
            text="Resources"
            weight="1"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- resource type manager -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Type:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />
                    <ttkcombobox
                        name="combo_res_type"
                        width="1"
                        state="disabled"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="width"
                    />
                    <!-- spacer -->
                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />
                    <!-- toolbar zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_type"
                            text="+"
                            command="@Resources:Type:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_type"
                            text="-"
                            command="@Resources:Type:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_purge_type"
                            text="Purge"
                            command="@Resources:Type:Purge"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- resource section manager -->

                <ttkframe
                    weight="1"
                >
                    <ttklabel
                        text="Section:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />
                    <ttkcombobox
                        name="combo_res_section"
                        width="1"
                        state="disabled"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="width"
                    />
                    <!-- spacer -->
                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />
                    <!-- toolbar zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_section"
                            text="+"
                            command="@Resources:Section:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_section"
                            text="-"
                            command="@Resources:Section:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_purge_section"
                            text="Purge"
                            command="@Resources:Section:Purge"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>

                <!-- resource item manager -->

                <ttkframe
                    weight="3"
                >
                    <ttklabel
                        text="Item:"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="width"
                    />
                    <!-- listbox zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="yes"
                    >
                        <listbox
                            id="res_items_list"
                            name="listbox_res_item"
                            height="8"
                            width="1"
                            highlightthickness="0"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                            resizable="yes"
                        />
                        <ttkscrollbar
                            connect="res_items_list"
                            orient="vertical"
                            layout="grid"
                            layout_options="row=0, column=1"
                            resizable="height"
                        />
                        <ttkscrollbar
                            connect="res_items_list"
                            orient="horizontal"
                            layout="grid"
                            layout_options="row=1, column=0"
                            resizable="width"
                        />
                    </ttkframe>
                    <!-- spacer -->
                    <ttkframe
                        height="5"
                        layout="grid"
                        layout_options="row=2, column=0"
                        resizable="width"
                    />
                    <!-- toolbar zone -->
                    <ttkframe
                        layout="grid"
                        layout_options="row=3, column=0"
                        resizable="width"
                    >
                        <ttkbutton
                            name="btn_add_item"
                            text="+"
                            command="@Resources:Item:Add"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=0"
                        />
                        <ttkbutton
                            name="btn_del_item"
                            text="-"
                            command="@Resources:Item:Delete"
                            width="2"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <!-- spacer -->
                        <ttkframe
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <ttkbutton
                            name="btn_purge_item"
                            text="Purge"
                            command="@Resources:Item:Purge"
                            takefocus="false"
                            layout="grid"
                            layout_options="row=0, column=3"
                        />
                    </ttkframe>
                </ttkframe>
            </ttkpanedwindow>
        </ttklabelframe>

        <!-- planning / edition zone -->

        <ttklabelframe
            text="Planning"
            weight="4"
        >
            <ttkpanedwindow
                orient="vertical"
                layout="pack"
                resizable="yes"
            >

                <!-- planning canvas -->

                <ttkframe
                    weight="1"
                >
                    <canvas
                        id="res_planning"
                        name="canvas_resources_planning"
                        bg="grey80"
                        highlightbackground="grey20"
                        highlightthickness="1"
                        relief="solid"
                        takefocus="false"
                        layout="grid"
                        layout_options="row=0, column=0"
                        resizable="yes"
                    />
                    <ttkscrollbar
                        connect="res_planning"
                        orient="vertical"
                        layout="grid"
                        layout_options="row=0, column=1"
                        resizable="height"
                    />
                    <ttkscrollbar
                        connect="res_planning"
                        orient="horizontal"
                        layout="grid"
                        layout_options="row=1, column=0"
                        resizable="width"
                    />
                </ttkframe>

                <!-- data / notes edition -->

                <ttkpanedwindow
                    orient="horizontal"
                    weight="3"
                >

                    <!-- data form -->

                    <ttklabelframe
                        text="Data"
                        weight="3"
                    >
                        <!-- ID/name entry -->
                        <ttklabel
                            text="ID/name:"
                            layout="grid"
                            layout_options="row=0, column=0, sticky='w'"
                        />
                        <!-- spacer -->
                        <ttkframe
                            width="5"
                            layout="grid"
                            layout_options="row=0, column=1"
                        />
                        <ttkentry
                            name="entry_res_name"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=0, column=2"
                            resizable="width"
                        />
                        <!-- role entry -->
                        <ttklabel
                            text="Role:"
                            layout="grid"
                            layout_options="row=1, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_role"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=1, column=2, pady=5"
                            resizable="width"
                        />
                        <!-- contact entry -->
                        <ttklabel
                            text="Contact:"
                            layout="grid"
                            layout_options="row=2, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_contact"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=2, column=2, pady=5"
                            resizable="width"
                        />
                        <!-- phone contact entry -->
                        <ttklabel
                            text="Phone:"
                            layout="grid"
                            layout_options="row=3, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_phone"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=3, column=2, pady=5"
                            resizable="width"
                        />
                        <!-- e-mail contact entry -->
                        <ttklabel
                            text="E-mail:"
                            layout="grid"
                            layout_options="row=4, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_email"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=4, column=2, pady=5"
                            resizable="width"
                        />
                        <!-- address entry -->
                        <ttklabel
                            text="Address:"
                            layout="grid"
                            layout_options="row=5, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_address"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=5, column=2, pady=5"
                            resizable="width"
                        />
                        <!-- zip code entry -->
                        <ttklabel
                            text="Zip code:"
                            layout="grid"
                            layout_options="row=6, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_zipcode"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=6, column=2, pady=5"
                            resizable="width"
                        />
                        <!-- city entry -->
                        <ttklabel
                            text="City:"
                            layout="grid"
                            layout_options="row=7, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_city"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=7, column=2, pady=5"
                            resizable="width"
                        />
                        <!-- country entry -->
                        <ttklabel
                            text="Country:"
                            layout="grid"
                            layout_options="row=8, column=0, sticky='w'"
                        />
                        <ttkentry
                            name="entry_res_country"
                            state="disabled"
                            width="1"
                            layout="grid"
                            layout_options="row=8, column=2, pady=5"
                            resizable="width"
                        />
                    </ttklabelframe>

                    <!-- notes / remarks -->

                    <ttklabelframe
                        text="Notes"
                        weight="1"
                    >
                        <!-- notes editor -->

                        <ttkframe
                            layout="pack"
                            resizable="yes"
                        >
                            <text
                                id="res_notes"
                                name="text_notes"
                                autoseparators="true"
                                height="20"
                                state="disabled"
                                undo="true"
                                width="20"
                                wrap="word"
                                layout="grid"
                                layout_options="row=0, column=0"
                                resizable="yes"
                            />
                            <tkevent
                                widget="res_notes"
                                seq="Key"
                                slot="@Text:Key:Pressed"
                            />
                            <ttkscrollbar
                                connect="res_notes"
                                orient="vertical"
                                layout="grid"
                                layout_options="row=0, column=1"
                                resizable="height"
                            />
                        </ttkframe>
                    </ttklabelframe>

                </ttkpanedwindow>
            </ttkpanedwindow>
        </ttklabelframe>

    </ttkpanedwindow>
</tkwidget>
