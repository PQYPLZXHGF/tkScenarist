<tkwidget>

    <!-- element chaining -->

    <ttklabelframe
        text="Element chaining"
        padding="5px"
        layout="pack"
        resizable="yes"
    >
    </ttklabelframe>

    <!-- element look'n'feel -->

    <ttklabelframe
        text="Look'n'feel"
        padding="5px"
        layout="pack"
        resizable="yes"
    >
    </ttklabelframe>

    <!-- applying options -->

    <ttklabelframe
        text="Options"
        padding="5px"
        layout="pack"
        resizable="yes"
    >
        <ttkradiobutton
            text="Apply globally"
            variable="options_apply"
            value="global"
            selected="true"
            layout="pack"
            resizable="width"
        />
        <ttkradiobutton
            text="Apply to current project only"
            variable="options_apply"
            value="project"
            layout="pack"
            resizable="width"
        />
    </ttklabelframe>

</tkwidget>
