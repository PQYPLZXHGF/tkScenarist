<tkwidget>

    <!-- mappings scope -->

    <ttknotebook
        name="notebook_see_prefs"
        layout="pack"
        resizable="yes"
    >
        <!-- tab 1 -->
        <ttktab text="Global settings" />

        <!-- tab 2 -->
        <ttktab text="Project settings" />

    </ttknotebook>

    <!-- SEE preferences frame -->

    <ttkstyle
        apply="raised.TFrame"
        borderwidth="1"
        relief="raised"
    />

    <ttkframe
        padding="5px"
        style="raised.TFrame"
        layout="pack"
        resizable="yes"
    >

        <!-- current element selection -->

        <ttklabelframe
            text="Element"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <ttklabel
                text="Current selected:"
                layout="grid"
                layout_options="row=0, column=0, sticky='w'"
            />
            <ttkcombobox
                name="combo_current_element"
                layout="grid"
                layout_options="row=0, column=1, padx=5, pady=2"
                resizable="no"
            />
        </ttklabelframe>

        <!-- keyboard switchers / line creators -->

        <ttklabelframe
            text="Actions"
            padding="5px"
            layout="pack"
            layout_options="pady=2"
            resizable="yes"
        >

            <!-- header labels -->

            <ttklabel
                text="On key:"
                layout="grid"
                layout_options="row=0, column=0"
            />
            <ttklabel
                text="Switch line to:"
                layout="grid"
                layout_options="row=0, column=1"
            />
            <ttklabel
                text="Create new line of:"
                layout="grid"
                layout_options="row=0, column=2"
            />

            <!-- TAB selectors -->

            <ttklabel
                text="&lt;Tab&gt;"
                layout="grid"
                layout_options="row=1, column=0"
            />
            <ttkcombobox
                name="combo_tab_switch"
                layout="grid"
                layout_options="row=1, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_tab_create"
                layout="grid"
                layout_options="row=1, column=2, padx=5, pady=2"
            />

            <!-- RETURN selectors -->

            <ttklabel
                text="&lt;Return&gt;"
                layout="grid"
                layout_options="row=2, column=0"
            />
            <ttkcombobox
                name="combo_return_switch"
                layout="grid"
                layout_options="row=2, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_return_create"
                layout="grid"
                layout_options="row=2, column=2, padx=5, pady=2"
            />

            <!-- CTRL-RETURN selectors -->

            <ttklabel
                text="&lt;Ctrl-Return&gt;"
                layout="grid"
                layout_options="row=3, column=0"
            />
            <ttkcombobox
                name="combo_ctrl_return_switch"
                layout="grid"
                layout_options="row=3, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_ctrl_return_create"
                layout="grid"
                layout_options="row=3, column=2, padx=5, pady=2"
            />

        </ttklabelframe>

        <!-- element's look'n'feel -->

        <ttklabelframe
            text="Look'n'feel"
            padding="5px 5px 5px 0px"
            layout="pack"
            layout_options="pady=2"
            resizable="yes"
        >

            <!-- font face settings -->

            <ttkframe
                padding="0px 0px 0px 5px"
                layout="pack"
                resizable="yes"
            >
                <ttkcombobox
                    name="combo_font_family"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="width"
                />
                <ttkcombobox
                    name="combo_font_size"
                    values="8, 9, 10, 11, 12, 14, 16, 18, 20, 24, 28, 32, 36, 40, 48, 56, 64, 72, 84, 96"
                    width="3"
                    layout="grid"
                    layout_options="row=0, column=1, padx=5"
                />
                <ttkcombobox
                    name="combo_font_style"
                    values="'normal', 'bold', 'italic', 'bold italic'"
                    width="14"
                    layout="grid"
                    layout_options="row=0, column=2"
                />
            </ttkframe>

            <!-- background/foreground color settings -->

            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <ttklabel
                    text="Background:"
                    layout="grid"
                    layout_options="row=0, column=0"
                />
                <ttkbutton
                    name="btn_choose_bg"
                    command="@Dialog:Background:Choose"
                    layout="grid"
                    layout_options="row=0, column=1, padx=5"
                />
                <ttklabel
                    text="foreground:"
                    layout="grid"
                    layout_options="row=0, column=2"
                />
                <ttkbutton
                    name="btn_choose_fg"
                    command="@Dialog:Foreground:Choose"
                    layout="grid"
                    layout_options="row=0, column=3, padx=5"
                />
            </ttkframe>

            <!-- margin/text justification settings -->

            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <ttklabel
                    text="Align:"
                    layout="grid"
                    layout_options="row=0, column=0"
                />
                <ttkframe
                    layout="grid"
                    layout_options="row=0, column=1, padx=5, pady=5"
                >
                    <radiobutton
                        text="left"
                        variable="options_text_align"
                        value="left"
                        indicatoron="no"
                        selected="selected"
                        layout="grid"
                        layout_options="row=0, column=0, ipadx=5, ipady=2"
                    />
                    <radiobutton
                        text="center"
                        variable="options_text_align"
                        value="center"
                        indicatoron="no"
                        layout="grid"
                        layout_options="row=0, column=1, ipadx=5, ipady=2"
                    />
                    <radiobutton
                        text="right"
                        variable="options_text_align"
                        value="right"
                        indicatoron="no"
                        layout="grid"
                        layout_options="row=0, column=2, ipadx=5, ipady=2"
                    />
                </ttkframe>

                <!-- margin left -->

                <ttklabel
                    text="margin left:"
                    layout="grid"
                    layout_options="row=0, column=2"
                />
                <ttkentry
                    textvariable="entry_margin_left"
                    width="3"
                    layout="grid"
                    layout_options="row=0, column=3, padx=5"
                />

                <!-- margin right -->

                <ttklabel
                    text="margin right:"
                    layout="grid"
                    layout_options="row=0, column=4"
                />
                <ttkentry
                    textvariable="entry_margin_right"
                    width="3"
                    layout="grid"
                    layout_options="row=0, column=5, padx=5"
                />
            </ttkframe>
        </ttklabelframe>

        <!-- element's attribute preview -->

        <ttklabelframe
            text="Preview"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <text
                id="see_preview"
                name="text_preview"
                height="5"
                width="1"
                state="disabled"
                wrap="word"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="yes"
            />
            <ttkscrollbar
                connect="see_preview"
                orient="vertical"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="height"
            />
        </ttklabelframe>

    </ttkframe>

</tkwidget>
