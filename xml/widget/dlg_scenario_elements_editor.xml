<tkwidget>

    <!-- mappings scope -->

    <ttknotebook
        name="notebook_see_prefs"
        layout="pack"
        resizable="yes"
    >
        <!-- tab 1 -->
        <ttktab text="Global" />

        <!-- tab 2 -->
        <ttktab text="Project" />

    </ttknotebook>

    <!-- SEE preferences frame -->

    <ttkstyle
        apply="raised.TFrame"
        borderwidth="1"
        relief="raised"
    />

    <ttkframe
        padding="5px"
        style="raised.TFrame"
        layout="pack"
        resizable="yes"
    >

        <!-- current element selection -->

        <ttklabelframe
            text="Element"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <ttklabel
                text="Current selected:"
                layout="grid"
                layout_options="row=0, column=0, sticky='w'"
            />
            <ttkcombobox
                name="combo_current_element"
                values="'Action', 'Character', 'Dialogue', 'Parenthetical', 'Scene', 'Transition'"
                layout="grid"
                layout_options="row=0, column=1, padx=5, pady=2"
                resizable="no"
            />
        </ttklabelframe>

        <!-- keyboard switchers / line creators -->

        <ttklabelframe
            text="Actions"
            padding="5px"
            layout="pack"
            resizable="yes"
        >

            <!-- header labels -->

            <ttklabel
                text="On key:"
                layout="grid"
                layout_options="row=0, column=0"
            />
            <ttklabel
                text="Switch line to:"
                layout="grid"
                layout_options="row=0, column=1"
            />
            <ttklabel
                text="Create new line of:"
                layout="grid"
                layout_options="row=0, column=2"
            />

            <!-- TAB selectors -->

            <ttklabel
                text="&lt;Tab&gt;"
                layout="grid"
                layout_options="row=1, column=0"
            />
            <ttkcombobox
                name="combo_tab_switch"
                values="'--- no use ---', 'Action', 'Character', 'Dialogue', 'Parenthetical', 'Scene', 'Transition'"
                layout="grid"
                layout_options="row=1, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_tab_create"
                layout="grid"
                layout_options="row=1, column=2, padx=5, pady=2"
            />

            <!-- RETURN selectors -->

            <ttklabel
                text="&lt;Return&gt;"
                layout="grid"
                layout_options="row=2, column=0"
            />
            <ttkcombobox
                name="combo_return_switch"
                layout="grid"
                layout_options="row=2, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_return_create"
                layout="grid"
                layout_options="row=2, column=2, padx=5, pady=2"
            />

            <!-- CTRL-RETURN selectors -->

            <ttklabel
                text="&lt;Ctrl-Return&gt;"
                layout="grid"
                layout_options="row=3, column=0"
            />
            <ttkcombobox
                name="combo_ctrl_return_switch"
                layout="grid"
                layout_options="row=3, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_ctrl_return_create"
                layout="grid"
                layout_options="row=3, column=2, padx=5, pady=2"
            />

        </ttklabelframe>

        <!-- element's look'n'feel -->

        <ttklabelframe
            text="Look'n'feel"
            padding="5px"
            layout="pack"
            resizable="yes"
        >

            <ttkpanedwindow
                layout="pack"
                resizable="yes"
            >

                <!-- element's attribute options -->

                <ttklabelframe
                    text="Options"
                    padding="5px"
                    weight="1"
                >
                    <ttklabel
                        text="Font:"
                        layout="grid"
                        layout_options="row=0, column=0, sticky='w'"
                    />
                    <ttklabel
                        textvariable="lbl_options_font"
                        width="30"
                        layout="grid"
                        layout_options="row=0, column=1, padx=5, sticky='w'"
                        resizable="width"
                    />
                    <ttkbutton
                        text="Choose font"
                        command="@Dialog:Font:Choose"
                        layout="grid"
                        layout_options="row=0, column=2"
                    />
                </ttklabelframe>

                <!-- element's attribute preview -->

                <ttklabelframe
                    text="Preview"
                    padding="5px"
                    weight="5"
                >
                    <text
                        name="text_preview"
                        height="10"
                        width="40"
                        state="disabled"
                        wrap="word"
                        layout="pack"
                        resizable="yes"
                    />
                </ttklabelframe>

            </ttkpanedwindow>

        </ttklabelframe>

    </ttkframe>

</tkwidget>
