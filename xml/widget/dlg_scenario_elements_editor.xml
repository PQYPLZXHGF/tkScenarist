<tkwidget>

    <!-- mappings scope -->

    <ttknotebook
        name="notebook_see_prefs"
        layout="pack"
        resizable="yes"
    >
        <!-- tab 1 -->
        <ttktab text="Global settings" />

        <!-- tab 2 -->
        <ttktab text="Project settings" />

    </ttknotebook>

    <!-- SEE preferences frame -->

    <ttkstyle
        apply="raised.TFrame"
        borderwidth="1"
        relief="raised"
    />

    <ttkframe
        padding="5px"
        style="raised.TFrame"
        layout="pack"
        resizable="yes"
    >

        <!-- current element selection -->

        <ttklabelframe
            text="Element"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <ttklabel
                text="Current selected:"
                layout="grid"
                layout_options="row=0, column=0, sticky='w'"
            />
            <ttkcombobox
                name="combo_current_element"
                layout="grid"
                layout_options="row=0, column=1, padx=5, pady=2"
                resizable="no"
            />
        </ttklabelframe>

        <!-- keyboard switchers / line creators -->

        <ttklabelframe
            text="Actions"
            padding="5px"
            layout="pack"
            layout_options="pady=2"
            resizable="yes"
        >

            <!-- header labels -->

            <ttklabel
                text="On key:"
                layout="grid"
                layout_options="row=0, column=0"
            />
            <ttklabel
                text="Create new line of:"
                layout="grid"
                layout_options="row=0, column=1"
            />
            <ttklabel
                text="Switch line to:"
                layout="grid"
                layout_options="row=0, column=2"
            />

            <!-- TAB selectors -->

            <ttklabel
                text="&lt;Tab&gt;"
                layout="grid"
                layout_options="row=1, column=0"
            />
            <ttkcombobox
                name="combo_tab_create"
                layout="grid"
                layout_options="row=1, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_tab_switch"
                layout="grid"
                layout_options="row=1, column=2, padx=5, pady=2"
            />

            <!-- RETURN selectors -->

            <ttklabel
                text="&lt;Return&gt;"
                layout="grid"
                layout_options="row=2, column=0"
            />
            <ttkcombobox
                name="combo_return_create"
                layout="grid"
                layout_options="row=2, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_return_switch"
                layout="grid"
                layout_options="row=2, column=2, padx=5, pady=2"
            />

            <!-- CTRL-RETURN selectors -->

            <ttklabel
                text="&lt;Ctrl-Return&gt;"
                layout="grid"
                layout_options="row=3, column=0"
            />
            <ttkcombobox
                name="combo_ctrl_return_create"
                layout="grid"
                layout_options="row=3, column=1, padx=5, pady=2"
            />
            <ttkcombobox
                name="combo_ctrl_return_switch"
                layout="grid"
                layout_options="row=3, column=2, padx=5, pady=2"
            />

        </ttklabelframe>

        <!-- element's look'n'feel -->

        <ttklabelframe
            text="Look'n'feel"
            padding="5px 5px 5px 0px"
            layout="pack"
            layout_options="pady=2"
            resizable="yes"
        >

            <!-- font face settings -->

            <ttkframe
                padding="0px 0px 0px 5px"
                layout="pack"
                resizable="yes"
            >
                <ttkcombobox
                    name="combo_font_family"
                    layout="grid"
                    layout_options="row=0, column=0"
                    resizable="width"
                />
                <ttkcombobox
                    name="combo_font_size"
                    values="8, 9, 10, 11, 12, 14, 16, 18, 20, 24, 28, 32, 36, 40, 48, 56, 64, 72, 84, 96"
                    width="5"
                    layout="grid"
                    layout_options="row=0, column=1, padx=5"
                />
                <ttkcombobox
                    name="combo_font_style"
                    values="'normal', 'bold', 'italic', 'bold italic'"
                    width="14"
                    layout="grid"
                    layout_options="row=0, column=2"
                />
            </ttkframe>

            <!-- background/foreground color settings -->

            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <ttklabel
                    text="Background:"
                    layout="grid"
                    layout_options="row=0, column=0"
                />
                <button
                    name="btn_choose_bg"
                    text="white"
                    command="@Dialog:Color:Choose"
                    background="white"
                    foreground="grey20"
                    layout="grid"
                    layout_options="row=0, column=1, padx=5"
                />
                <ttklabel
                    text="foreground:"
                    layout="grid"
                    layout_options="row=0, column=2"
                />
                <button
                    name="btn_choose_fg"
                    text="black"
                    command="@Dialog:Color:Choose"
                    background="black"
                    foreground="grey80"
                    layout="grid"
                    layout_options="row=0, column=3, padx=5"
                />
            </ttkframe>

            <!-- margin/text justification settings -->

            <ttkframe
                layout="pack"
                resizable="yes"
            >
                <ttklabel
                    text="Align:"
                    layout="grid"
                    layout_options="row=0, column=0"
                />
                <ttkframe
                    layout="grid"
                    layout_options="row=0, column=1, padx=5, pady=5"
                >
                    <radiobutton
                        text="left"
                        command="@Dialog:Text:Align"
                        variable="options_text_align"
                        value="left"
                        indicatoron="no"
                        layout="grid"
                        layout_options="row=0, column=0, ipadx=5, ipady=2"
                    />
                    <radiobutton
                        text="center"
                        command="@Dialog:Text:Align"
                        variable="options_text_align"
                        value="center"
                        indicatoron="no"
                        layout="grid"
                        layout_options="row=0, column=1, ipadx=5, ipady=2"
                    />
                    <radiobutton
                        text="right"
                        command="@Dialog:Text:Align"
                        variable="options_text_align"
                        value="right"
                        indicatoron="no"
                        layout="grid"
                        layout_options="row=0, column=2, ipadx=5, ipady=2"
                    />
                </ttkframe>

                <!-- margin left -->

                <ttkframe
                    layout="grid"
                    layout_options="row=0, column=2, padx=5, pady=5"
                >

                    <ttklabel
                        text="margin left:"
                        layout="grid"
                        layout_options="row=0, column=0, padx=5"
                    />
                    <ttkentry
                        name="entry_lmargin"
                        textvariable="entry_margin_left"
                        width="5"
                        layout="grid"
                        layout_options="row=0, column=1"
                    />
                    <ttkcombobox
                        name="combo_lmargin_units"
                        values="'px', 'pt', 'mm', 'cm', 'in'"
                        width="3"
                        layout="grid"
                        layout_options="row=0, column=2"
                    />

                </ttkframe>

                <!-- margin right -->

                <ttkframe
                    layout="grid"
                    layout_options="row=0, column=3, pady=5"
                >

                    <ttklabel
                        text="margin right:"
                        layout="grid"
                        layout_options="row=0, column=0, padx=5"
                    />
                    <ttkentry
                        name="entry_rmargin"
                        textvariable="entry_margin_right"
                        width="5"
                        layout="grid"
                        layout_options="row=0, column=1"
                    />
                    <ttkcombobox
                        name="combo_rmargin_units"
                        values="'px', 'pt', 'mm', 'cm', 'in'"
                        width="3"
                        layout="grid"
                        layout_options="row=0, column=2"
                    />

                </ttkframe>

            </ttkframe>

        </ttklabelframe>

        <!-- element's attribute preview -->

        <ttklabelframe
            text="Preview"
            padding="5px"
            layout="pack"
            resizable="yes"
        >
            <text
                id="see_preview"
                name="text_preview"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="yes"
            />
            <ttkscrollbar
                connect="see_preview"
                orient="vertical"
                layout="grid"
                layout_options="row=0, column=1"
                resizable="height"
            />
        </ttklabelframe>

    </ttkframe>

</tkwidget>
