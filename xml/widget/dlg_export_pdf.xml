<tkwidget>

    <!-- data to export -->

    <ttklabelframe
        text="Data to export"
        layout="pack"
        resizable="yes"
    >
        <ttkcheckbutton
            text="Scenario"
            variable="chk_scenario"
            onvalue="1"
            checked="checked"
            layout="pack"
            resizable="width"
        />
        <ttkcheckbutton
            text="Storyboard"
            variable="chk_storyboard"
            onvalue="1"
            layout="pack"
            resizable="width"
        />
        <ttkcheckbutton
            text="Pitch/Concept"
            variable="chk_pitch_concept"
            onvalue="1"
            layout="pack"
            resizable="width"
        />
        <ttkcheckbutton
            text="Draft/Notes"
            variable="chk_draft_notes"
            onvalue="1"
            layout="pack"
            resizable="width"
        />
    </ttklabelframe>

    <!-- options -->

    <ttklabelframe
        text="Options"
        layout="pack"
        resizable="yes"
    >
        <ttklabel
            text="Dummy"
            layout="pack"
            resizable="width"
        />
    </ttklabelframe>

    <!-- status -->

    <ttklabelframe
        text="Status"
        layout="pack"
        resizable="yes"
    >
        <!-- export status -->
        <ttklabel
            textvariable="lbl_export_status"
            layout="pack"
            resizable="width"
        />
        <ttkframe
            layout="pack"
            resizable="yes"
        >
            <ttkprogressbar
                name="progressbar_export"
                variable="pbar_value"
                length="200"
                layout="grid"
                layout_options="row=0, column=0"
                resizable="width"
            />
            <!-- spacer -->
            <ttkframe
                width="5"
                layout="grid"
                layout_options="row=0, column=1"
            />
            <ttkbutton
                name="btn_export"
                text="Export"
                command="@Dialog:ExportPDF:Export"
                layout="grid"
                layout_options="row=0, column=2"
            />
        </ttkframe>
    </ttklabelframe>
</tkwidget>
