<tkmenu>

    <!-- menu PROJECT -->
    <menu label="_Project">
        <command
            label="_New"
            accelerator="Ctrl+N"
            command="@File:New"
        />
        <separator/>
        <command label="_Open"/>
        <command label="_Open recent"/>
        <separator/>
        <command label="_Save"/>
        <command label="Save _as..."/>
        <separator/>
        <command label="_Reload"/>
        <separator/>
        <command label="_Export to PDF"/>
        <separator/>
        <command
            label="_Quit"
            accelerator="Ctrl+Q"
            command="@quit"
        />
    </menu>

    <!-- menu EDIT -->
    <menu label="_Edit">
        <command label="_Undo"/>
        <command label="_Redo"/>
        <separator/>
        <command label="Copy"/>
        <command label="Cut"/>
        <command label="Paste"/>
        <separator/>
        <command label="Select all"/>
        <separator/>
        <command label="Delete"/>
        <command label="Delete all"/>
    </menu>

    <!-- menu VIEW -->
    <menu label="_View">
        <checkbutton
            label="_Toggle status bar"
            command="@ToggleStatusbar"
            variable="show_statusbar"
        />
    </menu>

    <!-- menu TOOLS -->
    <menu label="_Tools">
        <command
            label="_Name database"
            accelerator="Alt+N"
            command="@Tools:NameDatabase"
        />
    </menu>

    <!-- menu HELP -->
    <menu label="_Help">
    </menu>

</tkmenu>
